<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_signup_fondo_1"
        android:background="@drawable/shape_gradient_login" >

    </ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_gradient_login">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/shape_rectangle_signup"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/ll_SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electronico:"
                    android:paddingHorizontal="15dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/et_Correo_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Correo"
                    android:background="@drawable/shape_edittext_login"
                    android:layout_marginHorizontal="15dp"
                    android:paddingHorizontal="15dp"
                    android:inputType="textEmailAddress"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrase単a:"
                    android:paddingHorizontal="15dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/et_Password_SignUp_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Contrase単a"
                    android:background="@drawable/shape_edittext_login"
                    android:layout_marginHorizontal="15dp"
                    android:paddingHorizontal="15dp"
                    android:inputType="textPassword"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repita la contrase単a:"
                    android:paddingHorizontal="15dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/et_Password_SignUp_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Contrase単a"
                    android:background="@drawable/shape_edittext_login"
                    android:layout_marginHorizontal="15dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="20dp"
                    android:inputType="textPassword"/>


            </LinearLayout>



        </RelativeLayout>

        <Button
            android:id="@+id/btn_ContinuarSignUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Continuar"
            android:background="@drawable/button_login"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_below="@+id/ll_SignUp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>


</RelativeLayout>