<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_signup_fondo_1"
        android:background="@drawable/shape_gradient_login" >

    </ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_gradient_login">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aviso"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/shape_rectangle_signup"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll_SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Los datos que ingresaste ya han sido comprobados. Tu cuenta ha sido habilitada. De clic en continuar
                    para poder iniciar sesiÃ³n."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>



            </LinearLayout>



        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Aceptar"
            android:background="@drawable/button_login"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_below="@+id/ll_SignUp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>


</RelativeLayout>