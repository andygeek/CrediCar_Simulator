<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Interes : "
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_dInteres"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Seguro degravamen : "
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_dSeguroDegrabamen"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Seguro vehicular : "
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_dSeguroVehicular"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Amortizacion : "
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_dAmortizacion"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Portes : "
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_dPortes"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Cuota : "
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tv_dCuota"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>



</LinearLayout>
