<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SplashActivity"
    android:background="@drawable/shape_rectangle_solid_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_warning"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_MessageError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btn_AceptarErrorPassword"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rectangle_profile"
            android:text="Aceptar"/>

    </LinearLayout>


</RelativeLayout>